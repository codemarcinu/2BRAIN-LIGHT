#!/bin/bash
# Skrypt do szybkiego restartu usług 2Brain Lite (Bot + Watcher)

# Pobierz ścieżkę do katalogu, w którym znajduje się ten skrypt
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Uruchom run_all.sh z poprawnej lokalizacji
if [ -f "$DIR/run_all.sh" ]; then
    bash "$DIR/run_all.sh"
else
    echo "❌ BŁĄD: Nie znaleziono run_all.sh w $DIR"
    exit 1
fi
